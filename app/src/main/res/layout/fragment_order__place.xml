<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Order_Place"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thumb"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        android:translationZ="1dp">

        <ImageView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/boarder_shop_name"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"

            android:src="@drawable/place" />

        <ImageView
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/boarder_shop_name"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"


            android:src="@drawable/call" />

        <ImageView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/boarder_shop_name"

            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"


            android:src="@drawable/chat" />

    </LinearLayout>

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_marginTop="2sp"
        android:id="@+id/product_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:background="@drawable/boarder"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boarder_shop_name"
            android:fontFamily="sans-serif-smallcaps"
            android:paddingLeft="5dp"

            android:text="Product id "

            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center_vertical"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="6"

            android:textColor="#feb80d" />

    </LinearLayout>


    <ImageView

        android:minHeight="220dp"
        android:id="@+id/thumb"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:src="@drawable/logo" />






    <Button

        android:textColor="#ffffff"
        android:background="#ffb90d"
        android:id="@+id/order"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Add to Cart" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/thumb"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/thumb"
            android:background="@drawable/boarder"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            >

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/boarder_shop_name"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Stock"
                android:textColor="#ffffff"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/shop"
                android:layout_width="129dp"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_vertical"
                android:text="Punjab Eelectonics"
                android:textAlignment="center"
                android:textColor="#feb80d" />

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="3dp"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/thumb"
            android:background="@drawable/boarder"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="129dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@drawable/boarder_shop_name"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_vertical"
                android:text="Price"
                android:textAlignment="center"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/price"
                android:layout_width="129dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="228dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_vertical"
                android:text="Price"
                android:textAlignment="center"
                android:textColor="#feb80d" />

            <ImageButton

                android:background="#00ffffff"
                android:src="@drawable/decrease"
                android:id="@+id/decrease"
                android:layout_width="25dp"
                android:layout_height="25dp"
             android:layout_gravity="center"

                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_vertical"
                android:text="Price"
                android:textAlignment="center"
                android:textColor="#feb80d" />
            <TextView
                android:background="#00ffffff"
                android:src="@drawable/decrease"
                android:id="@+id/count"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_vertical"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#feb80d" />


            <ImageButton

                android:layout_marginRight="10dp"
                android:background="#00ffffff"
                android:src="@drawable/increase"
                android:id="@+id/increase"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"

                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_vertical"
                android:text="Price"
                android:textAlignment="center"
                android:textColor="#feb80d" />


        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/thumb"
            android:background="@drawable/boarder"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            >

            <TextView

                android:layout_width="129dp"
                android:layout_height="35dp"
                android:background="@drawable/boarder_shop_name"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Stock"
                android:textColor="#ffffff"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/stock"
                android:layout_width="129dp"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="228dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_vertical"
                android:text="6"
                android:textAlignment="center"
                android:textColor="#feb80d" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/thumb"
            android:background="@drawable/detail_boarder"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="30dp"

                android:background="@drawable/boarder_shop_name"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center_vertical"
                android:text="Detail"
                android:textAlignment="center"
                android:textColor="#ffffff" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp">
    <TextView
        android:textAlignment="textStart"
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        android:fontFamily="sans-serif-smallcaps"

        android:text="Price"

        android:textColor="#feb80d" />

</ScrollView>


        </LinearLayout>




    </LinearLayout>


</RelativeLayout>